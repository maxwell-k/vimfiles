Execute:
  AssertEqual '0', opfunc#transform('0'), 'idempotency'
  AssertEqual '1', opfunc#dedent('  1')
  AssertEqual '2', opfunc#transform('  2')
  AssertEqual '3 4', opfunc#transform("  3 \\\n  4")
  AssertEqual '5 6', opfunc#transform("5 ^\n6")
  AssertEqual '7 8', opfunc#transform('7  8')
  AssertEqual '9 10', opfunc#transform("# 9\n# 10")
  AssertEqual '11 12', opfunc#transform("11\n12")
  AssertEqual '13 14', opfunc#transform("13\n14 ")
  AssertEqual '15 16', opfunc#transform("15\n\\ 16")
  AssertEqual '17 18', opfunc#transform("  17\n    \\ 18")
  AssertEqual '19 20', opfunc#transform('19	20')
